	<!-- 게시물 목록을 조회한다 -->
	<select id="selectItemList" parameterType="com.badaservice.model.Shop"
		resultMap="shop">
		SELECT id,item_title,content,price,item_image,
		DATE_FORMAT(reg_date, '%Y-%m-%d')as reg_date
		FROM item_add
		WHERE id=#{id}
		ORDER BY id DESC
