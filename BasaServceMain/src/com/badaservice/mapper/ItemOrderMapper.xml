<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mtbatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 이 파일의 경로를 config.xml에 명시 해야한다 -->
<!-- professor 테이블에 대한 CRUD 기능을 구현하기 위함 Mapper -->
<mapper namespace="ItemOrderMapper">
	<!-- Beans 클래스의 객체 이름(id)과 클래스 이름 (type)을 명시한다 -->
	<resultMap id="ItemOrder" type="com.badaservice.model.ItemOrder">
		<result property="id" column="id" />
		<result property="memberId" column="member_id" />
		<result property="userId" column="user_id" />
		<result property="postcode" column="postcode" />
		<result property="addr1" column="addr1" />
		<result property="addr2" column="addr2" />
		<result property="email" column="email" />
		<result property="tel" column="tel" />
		<result property="state" column="state" />
		<result property="itemTitle" column="item_title" />
		<result property="price" column="price" />
		<result property="regData" column="reg_data" />
		<result property="itemImg" column="item_img" />
	</resultMap>

	<!-- 구매하기  -->
	<insert id="insertitemorder" parameterType="com.badaservice.model.ItemOrder" 
		useGeneratedKeys="true" keyProperty="id">
		insert into item_order (member_id, user_id, postcode, addr1, addr2, email, tel, state, item_title, price, reg_data, item_img)
		 				values ( #{memberId}, #{userId}, #{postcode}, #{addr1}, #{addr2}, #{email}, #{tel}, #{state}, #{itemTitle}, #{price}, now(), #{itemImg} )
	</insert>
	
	<!-- 판매내역 목록을 조회한다. -->
	<select id="selectMessageList" parameterType="com.badaservice.model.ItemOrder" 
		resultMap="ItemOrder">
		select item_title, price, reg_data, state, user_name from item_order where member_id=#{memberId}
	</select>
</mapper>	