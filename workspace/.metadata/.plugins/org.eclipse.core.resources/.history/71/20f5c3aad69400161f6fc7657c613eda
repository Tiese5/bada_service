package study.jsp.mysite.service;

import java.util.List;

import study.jsp.mysite.model.BbsDocument;
import study.jsp.mysite.model.BbsFile;

public interface BbsFileService {
	/**
	 * 파일 정보를 저장한다
	 * @param file	-파일 데이터
	 * @throws Exception
	 */
	public void insertFile(BbsFile file)throws Exception;
	/**
	 * 파일 리스트
	 * @param file
	 * @return
	 * @throws Exception
	 */
	public List<BbsFile> selectFileList(BbsFile file)throws Exception;
	/**
	 * 하나에 게시물에 종속된 목록을 삭제한다
	 * @param file
	 * @throws Exception
	 */
	public void deleteFileAll(BbsFile file)throws Exception;
	
	/**
	 * 하나의 단일 파일에 대한 정보를 조회한다
	 * @param document
	 * @return BbsFile -저장된 경로 정보
	 * @throws Exception
	 */
	public BbsFile selectFile(BbsFile document)throws Exception;
	/**
	 * 하나의 단일 파일 정보를 삭제한다
	 * @param document
	 * @throws Exception
	 */
	public	void deleteFile(BbsFile document)throws Exception;
}
